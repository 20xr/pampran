{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "branch": "{{env `user`}}",
    "build": "{{timestamp}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-f5f41398",
      "instance_type": "t2.small",
      "ssh_username": "ec2-user",
      "ami_name": "pampran-ami.{{timestamp}}",
      "run_tags": {
        "env": "packer"
      },
      "tags": {
        "Name": "pampran-ami",
        "branch": "{{user `branch`}}",
        "build": "#{{user `build`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "30s",
      "execute_command": "{{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "scripts": [
        "scripts/yum-update.sh",
        "scripts/nodejs.sh",
        "scripts/newrelic.sh",
        "scripts/papertrail.sh",
        "scripts/mysql.sh",
        "scripts/jq.sh",
        "scripts/devtools.sh",
        "scripts/redis.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/files-pre.sh"
      ]
    },
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/files"
    },
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "scripts": [
        "scripts/files-post.sh",
        "scripts/services.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/npm-common.sh"
      ]
    }
  ]
}
